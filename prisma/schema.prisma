// ============================================

model Service {
  id          Int        @id @default(autoincrement())
  name        String
  slug        String     @unique
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  packages    Package[]  
  testimonials Testimonial[]
}

// Update model Package
model Package {
  id             Int                  @id @default(autoincrement())
  serviceId      Int
  type           String
  highlight      Boolean              @default(false)
  price          Int
  discount       Int
  priceOriginal  Int
  link           String
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  service        Service              @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  features       PackageFeature[]
  requirements   PackageRequirement[]
  projects       PackageProject[]     // Add this relation
}


model Feature {
  id        Int               @id @default(autoincrement())
  name      String            @unique
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  packages  PackageFeature[]
}

model Requirement {
  id        Int                   @id @default(autoincrement())
  name      String                @unique
  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt

  packages  PackageRequirement[]
}

model PackageFeature {
  packageId   Int
  featureId   Int
  status      Boolean  @default(true)  // true/false untuk centang/silang

  package     Package  @relation(fields: [packageId], references: [id], onDelete: Cascade)
  feature     Feature  @relation(fields: [featureId], references: [id], onDelete: Cascade)

  @@id([packageId, featureId])
}

model PackageRequirement {
  packageId      Int
  requirementId  Int

  package        Package     @relation(fields: [packageId], references: [id], onDelete: Cascade)
  requirement    Requirement @relation(fields: [requirementId], references: [id], onDelete: Cascade)

  @@id([packageId, requirementId])
}

model Testimonial {
  id            Int      @id @default(autoincrement())
  clientPhoto   String?
  clientPhotoPublicId String?  // Add this for Cloudinary
  companyLogo   String?
  companyLogoPublicId String?  // Add this for Cloudinary
  clientName    String
  companyName   String?
  clientReview  String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  serviceId     Int
  service       Service  @relation(fields: [serviceId], references: [id])
}

// Update model Project (rename from projects)
model Project {
  id          Int              @id @default(autoincrement())
  name        String
  companyName String
  link        String
  preview     String
  previewPublicId String?      // Add for Cloudinary
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  packages    PackageProject[] // Add this relation
}

// Add junction table
model PackageProject {
  packageId   Int
  projectId   Int

  package     Package  @relation(fields: [packageId], references: [id], onDelete: Cascade)
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@id([packageId, projectId])
}

model Promo {
  id            Int              @id @default(autoincrement())
  url_dekstop   String
  url_mobile    String
  url           String
  alt           String
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
}